@model Ipt_Project_Website.Models.Job_post

@{
    ViewBag.Title = "CreateJob";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateJob</h2>


@using (Html.BeginForm("CreateJob", "Employer", FormMethod.Post, new
{
    enctype = "multipart/form-data"
}))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Job_post</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.UploadFile, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-offset-2 col-md-10">
            <input type="file" name="UploadFile" class="btn btn-default" />
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Job_designation, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select name="Job_designation" id="des">
                <option value="Data Science">Data Science</option>
                <option value="Web Developer">Web Developer</option>
                <option value="Hadoop Developer">Hadoop Developer</option>
                <option value="Business Analyst">Business Analyst</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
